<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="380.0" prefWidth="520.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.pets.PetsViewController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false"
                      onAction="#handleActions" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false"
                      onAction="#handleActions" text="About"/>
        </Menu>
    </MenuBar>
    <TabPane fx:id="tabPane" prefHeight="320.0" prefWidth="587.0"
             tabClosingPolicy="UNAVAILABLE">
        <Tab fx:id="dogsTab" text="Dogs">
            <fx:include fx:id="dogsView" source="DogsView.fxml"/>
        </Tab>
        <Tab fx:id="catsTab" text="Cats">
            <fx:include fx:id="catsView" source="CatsView.fxml"/>
        </Tab>
        <Tab fx:id="birdsTab" text="Birds">
            <fx:include fx:id="birdsView" source="BirdsView.fxml"/>
        </Tab>
        <Tab fx:id="fishTab" text="Fish">
            <fx:include fx:id="fishView" source="FishView.fxml"/>
        </Tab>
        <Tab fx:id="rodentsTab" text="Rodents">
            <fx:include fx:id="rodentsView" source="RodentsView.fxml"/>
        </Tab>
        <Tab fx:id="variousTab" text="Various">
            <fx:include fx:id="variousView" source="VariousView.fxml"/>
        </Tab>
    </TabPane>
    <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleActions"
            text="Back">
        <VBox.margin>
            <Insets left="10.0"/>
        </VBox.margin>
    </Button>
</VBox>
