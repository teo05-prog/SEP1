<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="380.0" prefWidth="520.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="view.kennel.KennelViewController"
      xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem fx:id="changePriceMenuItem"
                      mnemonicParsing="false"
                      onAction="#handleActions"
                      text="Change Price"/>
            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false"
                      onAction="#handleActions" text="Exit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="About">
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false"
                      onAction="#handleActions" text="About"/>
        </Menu>
    </MenuBar>
    <TabPane fx:id="tabPane" prefHeight="320.0" prefWidth="200.0"
             tabClosingPolicy="UNAVAILABLE">
        <Tab text="Current">
            <fx:include fx:id="currentTab"
                        source="/view/kennel/CurrentView.fxml"/>
        </Tab>
        <Tab text="Past">
            <fx:include fx:id="pastTab" source="/view/kennel/PastView.fxml"/>
        </Tab>
        <Tab text="New">
            <fx:include fx:id="newBookingTab"
                        source="/view/kennel/NewBookingView.fxml"/>
        </Tab>
    </TabPane>
    <Button fx:id="backButton" mnemonicParsing="false"
            onAction="#handleActions" text="Back">
        <VBox.margin>
            <Insets left="5.0" top="5.0"/>
        </VBox.margin>
    </Button>
</VBox>
